<!DOCTYPE html>
<html>
<head>
  <title>Railsblog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">

  <link rel="stylesheet" hraf="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap-theme.min.css">

  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>

</head>
<body>
  <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="#">Rails Blog</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li><a href="/">Home</a></li>
            <li><a href="/posts">Post</a></li>
            <li><a href="#contact">About</a></li>
          </ul>

          <ul class="nav navbar-nav navbar-right">
            
            <% if current_user %>
              <li><a>Signed in as: <%= current_user.name %> - <%= image_tag(@auth['info']['image'], width: '30', heigth: '30') %></a></li>
              <li><%= link_to "Sign Out", 'sign_out', method: :delete %></li>
            <% else %>
              <li><%= link_to "auth/facebook" do %><%= image_tag('facebook.png', width: '30', heigth: '35' ) %><% end %></li>
              <li><%= link_to "auth/twitter" do %><%= image_tag('twitter.png', width: '30', heigth: '30' ) %><% end %></li>
            <% end %>

          </ul>

          
        </div>
      </div>
    </nav>

      <% flash.each do |key, value| %>
        <div class="alert alert-info"><%= value %></div>
      <% end  %>

      <% if current_user %>
        <div class="text-center">
          <h1>Welcome, <%= current_user.name%></h1>
          <h4>Logged in with -> <strong><em><%= @auth['provider'].capitalize %></em></strong></h4>
          <%= image_tag('logo.png') %>
        </div>
      <% end %>

    <div class='container-fluid'>
  		<%= yield %>
  	</div>
    <nav class="navbar navbar-inverse navbar-fixed-bottom"></div>
</body>
</html>
